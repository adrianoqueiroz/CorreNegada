<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_principal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DicasActivity" >

    <ListView
       android:id="@+id/dicasListView"
        style="@layout/activity_dicas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_categoria" >

    </ListView>
	 
    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/logo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/item_categoria"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/item_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dicasListView"
        android:layout_alignRight="@+id/dicasListView"
        android:layout_below="@+id/logo"
        android:text="@string/title_dicas"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    

</RelativeLayout>