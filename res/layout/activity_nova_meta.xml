<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_principal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NovaMetaActivity" >

    <EditText
        android:id="@+id/saveMetaCaminhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/saveMetaTrote"
        android:layout_below="@+id/saveMetaAquecimento"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/saveMetaTrote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveMetaCaminhada"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveMetaCaminhada"
        android:layout_alignBottom="@+id/saveMetaCaminhada"
        android:layout_alignParentLeft="true"
        android:text="Caminhada"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveMetaTrote"
        android:layout_alignBottom="@+id/saveMetaTrote"
        android:layout_alignLeft="@+id/textView3"
        android:text="Trote"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/saveMetaCorrida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/saveMetaTrote"
        android:layout_below="@+id/saveMetaTrote"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    <TextView
        android:id="@+id/tVKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveMetaCorrida"
        android:layout_alignBottom="@+id/saveMetaCorrida"
        android:layout_alignLeft="@+id/textView4"
        android:text="Corrida"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveMetaAquecimento"
        android:layout_alignBottom="@+id/saveMetaAquecimento"
        android:layout_alignParentLeft="true"
        android:text="Aquecimento"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:text="Nova Meta"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/saveMetaAquecimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveMetaTreino"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveMetaTreino"
        android:layout_alignBottom="@+id/saveMetaTreino"
        android:layout_alignLeft="@+id/textView2"
        android:text="Treino"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveMetaTempoTotal"
        android:layout_alignBottom="@+id/saveMetaTempoTotal"
        android:layout_alignLeft="@+id/tVKm"
        android:text="Tempo Total"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/saveMetaTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/saveMetaAquecimento"
        android:layout_below="@+id/kcal"
        android:layout_marginTop="18dp"
        android:ems="10" >

        <requestFocus />
        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/saveMetaTempoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/saveMetaCorrida"
        android:layout_below="@+id/saveMetaCorrida"
        android:layout_toLeftOf="@+id/toggleButton4"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSaveMetaSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/saveMetaTempoTotal"
        android:layout_below="@+id/saveMetaTempoTotal"
        android:layout_toRightOf="@+id/textView2"
        android:text="Salvar" />



</RelativeLayout>