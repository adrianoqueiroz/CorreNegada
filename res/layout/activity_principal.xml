<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_principal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PrincipalActivity" >

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btSettings"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@layout/bt_setting"
        android:onClick="AlterarConfiguracoesClick" />

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_above="@+id/btCorrer"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btMetas"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@layout/bt_menu"
            android:onClick="metasClick"
            android:text="@string/btMetas" />

        <Button
            android:id="@+id/btLocais"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@layout/bt_menu"
            android:onClick="locaisTreinoClick"
            android:text="@string/btLocaisTreino" />

        <Button
            android:id="@+id/btDicas"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@layout/bt_menu"
            android:onClick="dicasOnClick"
            android:text="@string/btDicas" />

        <Button
            android:id="@+id/btResultados"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@layout/bt_menu"
            android:text="@string/btResultados" />
    </LinearLayout>

    <Button
        android:id="@+id/btCorrer"
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/btSettings"
        android:layout_centerHorizontal="true"
        android:background="@layout/botao_correr"
        android:text="@string/btCorrer" />

</RelativeLayout>